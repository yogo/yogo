- form_for(:project, :url => collect_data_project_path(@project)) do |f|
  - field_set_tag("Pick Sites and/or Variables") do
    .collapsible-sites
      - for site in project.managed_repository{ Voeis::Site.all } do
        .field-item
          = check_box_tag("data[#{site.id}][all]", site.id, false, :class => "data[site_#{site.id}]", :id => "data[site_#{site.id}]")
          = label_tag("data[site_#{site.id}]", site.name)
          - for sensor in site.sensor_types do
            = check_box_tag("data[#{site.id}][#{sensor.id}]", site.id, false, 
                            :class => "data[site_#{site.id}][sensor_#{sensor.id}]", 
                            :id => "data[site_#{site.id}][sensor_#{sensor.id}]")
            = label_tag("data[site_#{site.id}][sensor_#{sensor.id}]",           
                        sensor.variables.first.variable_name)
          
  = f.submit('Update', :class => 'icon icon-save')