#users
  #create-user-link= link_to("Create a new User", new_user_path)
  %table
    %thead
      %tr
        %th Name
        %th Login
        %th Email
        %th View
        %th Edit
        %th Destroy
    %tbody
      - for user in @users
        %tr
          %td= user.name
          %td= user.login
          %td= user.email
          %td= link_to('View', user_path(user))
          %td= link_to('Edit', edit_user_path(user))
          %td= link_to('Delete', user_path(user), :method=>:delete, :confirm => 'Are you sure?')
          
#pagination-links= pagination_links(User, params[:page], 25)
