<h1>New Source</h1>

<% form_for :source, @source, :url => { :action => "create"} do |f| %>
  Organization: <%= f.text_field :organization %>
  <p>
  Source Description: <%= f.text_field :source_description %>
  <p>
  Source Link: <%= f.text_field :source_link %>
  <p>
  Contact Name: <%= f.text_field :contact_name %>
  <p>
  Phone: <%= f.text_field :phone%>
  <p>
  Email: <%= f.text_field :email%>
  <p>
  Address: <%= f.text_field :address%>
  <p>
  City: <%= f.text_field :city%>
  <p>
  State: <%= f.text_field :state%>
  <p>
  ZipCode: <%= f.text_field :zip_code%>
  <p>
  Citation: <%= f.text_field :citation%>
  <p>
  MetadataID: <%= f.text_field :metadata_id%>
