#content-actions
  = link_to("Permissions Report", page_url(:rolereport))
  = link_to("New Role", new_role_path, :class => 'new-link')
%table
  %thead
    %tr
      %th Name
      %th Description
      %th 
  %tbody
    - for role in collection
      %tr
        %td= link_to(role.name, edit_role_path(role))
        %td= role.description
        %td= link_to(image_tag("delete.png", :size => "16x16"), role_path(role), :method=>:delete, :confirm => 'Are you sure?')

#pagination-links= pagination_links(resource_class, params[:page], 20)
