#content-settings
  .rbox.tight
    - form_for(:membership, :url => project_membership_path(@project, @user.id), :html => {:method => :put} ) do |f|
      - field_set_tag("#{@project.name} roles for #{@user.name}:") do
        - for role in Role.all do
          = check_box_tag("memberships[roles][]", role.id, @role_names.include?(role.name), :class => "memberships_#{role.id}", :id => "memberships_#{role.id}")
          = label_tag("memberships_#{role.id}", role.name)
      = f.submit('Update', :class => 'icon icon-save')
      = link_to('Cancel', edit_project_path(@project), :class => 'icon icon-cancel')
