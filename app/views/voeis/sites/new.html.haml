%h2
- form_for(:site, resource, :url => project_sites_path(@project), :builder => YogoFormBuilder) do |f|
  = f.text_field("site_name")
  = f.text_field("site_code")
  = f.text_field("latitude")
  = f.text_field("longitude")
  = f.text_field("state")
  = f.submit("Submit")
  = link_to('Cancel', projects_path(@project), :class => 'cancel-link') 
  