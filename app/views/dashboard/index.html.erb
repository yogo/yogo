<h2 class='section-title'>Yogo Dashboard</h2>
<div class="button-small right">
  <%= link_to(image_tag("create-project-small.jpg"), start_wizard_path()) %>
</div>

<%- for project in @projects -%>
<div class="project-block">
  <div class="project-icon">
    <%= link_to(image_tag('mock-project-icon.jpg'), dashboard_path(project) ) %>
  </div>
  <div class="project-text">
    <%= link_to(project.name, dashboard_path(project) ) %>
    <p>
      <strong><%=h project.name %>:</strong> <%=h project.description %>
    </p>
    <%- if project.models.empty? -%>
      <p>There are no datasets associated with this project. <%= link_to('Make some?', csv_question_path(project)) %></p>
    <%- else -%>
      <table class="dashboard-table">
        <thead>
          <tr>
            <th>Dataset</th>
            <th>New</th>
            <th>Total</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <%- for dataset in project.models -%>
        <%# TODO: Make this use real data!q %>
          <tr>
            <td style="text-align:left;"><%= h dataset.public_name %></td>
            <td><%= link_to(dataset.count(:created_at.lt => 1.week.ago), "/mockup/show_project") %></td>
            <td><%= link_to(dataset.count, "/mockup/show_project") %></td>
            <td><%= link_to(image_tag('manage.png', :title => "Manage Data"), "/mockup/dataset1") %></td>
            <td><%= link_to(image_tag('edit.png', :title => "Describe Dataset"), "/mockup/edit") %></td>
            <td><%= link_to(image_tag('import.png', :title => "Import Data"), "") %></td>
          </tr>
        <%- end -%>
      </table>
    <%- end -%>
    
  </div>
</div>

<%- end -%>